  <div class="card-body p-0 card-inner">
    <div class="animal-img">
      <img src="{{image}}" alt="">
    </div>
    <div class="animal-content px-5 py-2 d-flex flex-column justify-content-center align-items-center">
      <h5 class="card-title">{{name}}</h5>
    {{!-- <p class="card-text">{{description}} --}}
      <p>Класс: {{title}}</p>
      <a href="/categories/{{categoryId}}/animals/{{id}}" class="btn see-more btn-secondary">Узнать больше</a>
    </div>
  </div>
</div>