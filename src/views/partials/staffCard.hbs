<div class="card staff-card my-3" style="width: 30rem;height: 12rem">
  <p class="card-header">{{firstName}} {{lastName}}</p>
  <div class="card-body">
    <p class="card-title">{{email}}</p>
    <div class="d-flex justify-content-center flex-column">
      <button type="button" class="m-1 p-1 btn btn-secondary" data-bs-toggle="modal" data-bs-target="#editStaffForm">
          Редактирование
      </button>
      <button type="button" class="m-1 p-1 btn btn-secondary" data-bs-toggle="modal" data-bs-target="#deleteStaffForm">
          Удалить
      </button>
    </div>
  </div>
</div>

<div class="modal fade" id="editStaffForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/staff/{{id}}" class='editStaffForm'>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" value="{{email}}">
          </div>
          <div class="mb-3">
            <label class="form-label">Имя</label>
            <input type="text" name="firstName" class="form-control" value="{{firstName}}">
          </div>
          <div class="mb-3">
            <label class="form-label">Фамилия</label>
            <input type="text" name="lastName" class="form-control" value="{{lastName}}">
          </div>
          <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input type="password" name="password" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Подтвердить</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deleteStaffForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/staff/{{id}}" class='deleteStaffForm'>
          <p>
             Вы уверены что хотите удалить сотрудника?
          </p>
          <button type="submit" class="btn btn-secondary">Подтвердить</button>
        </form>
      </div>
    </div>
  </div>
</div>