<script defer src='/js/wsChat.js'></script>
<script
  defer
  src='https://kit.fontawesome.com/8dddf3354c.js'
  crossorigin='anonymous'
></script>

<div class='chat-container chat d-flex'>
  <div>
    <iframe
      width='560'
      height='315'
      src='https://www.youtube.com/embed/h4yyi1DAl1Q?autoplay=1&mute=1'
      title='YouTube video player'
      frameborder='0'
      allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture'
      allowfullscreen
      preload='auto'
      autoplay='true'
      loop='true'
      muted='1'
    ></iframe>
  </div>

  <div style="width: 30rem;">
  <div class='msger-chat'></div>

  <form
    class='bg-dark form chat__form px-3 d-flex justify-content-between align-items-end py-3'
    name='chatForm'
  >
    <div class='px-3'>
      <label for='author' class='form-label d-inline-block'>Имя</label>
      <input
        type='text'
        name='author'
        class='form-control d-inline-block'
        id='author'
        aria-describedby='emailHelp'
        required
      />
    </div>
    <div class='px-3'>
      <label for='text' class='form-label d-inline-block'>Сообщение</label>
      <input
        type='text'
        name='text'
        class='form-control d-inline-block'
        id='text'
        required
      />
    </div>
    <button type='submit' class='btn btn-primary'><i
        class='far fa-paper-plane p-0'
      ></i></button>
  </form>
</div>
</div>

<template id='message-template'>
  <div class='msg left-msg'>
    <div class='msg-bubble'>
      <div class='msg-info'>
        <div class='msg-info-name message__author'></div>
        <div class='msg-info-time message__date'></div>
      </div>

      <div class='msg-text message__text'></div>
    </div>
  </div>
</template>